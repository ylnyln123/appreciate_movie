.video-play{
  position: sticky;
  top: 0;
  z-index: 2;
  height: 360rpx;
  display: flex;
  justify-content: center;
 
}
.video-play-main{
 
  width: 100%;
  height: 360rpx;
}
.movie-name{
  font-size: 42rpx;
  padding: 32rpx;
  font-weight:700;
}
.nav{
  display: flex;
  height: 96rpx;
  border-bottom: 1rpx solid #dbdbdb;
}
.nav-item{
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav-item image{
  width: 38rpx;
  height: 38rpx;
  margin-right: 16rpx;
}
.nav-item-text{
  display: flex;
  flex-direction: column;
  font-size: 34rpx;
  font-weight: 600;
  color: firebrick;
}
.bottom-border{
  position: absolute;
  animation: extend .2s forwards;
  bottom: 0;
  width: 0rpx;
  height: 4rpx;
  background-color: firebrick;
}
.movie-content{
  display: flex;
  flex-direction: column;
}
.movie-content-detail{
  padding: 24rpx 0;
}
.movie-content-detail-synopsis{
  padding: 24rpx;
  font-size: 32rpx;
}
.movie-content-detail-discuss{
  padding: 24rpx 48rpx;
}
.movie-content-detail-discuss-item{
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #dbdbdb;
  padding-bottom: 24rpx;
}
.movie-content-detail-discuss-item-title{
  display: flex;
  align-items: center;
}
.movie-content-detail-discuss-item-title image{
  width: 72rpx;
  height: 72rpx;
  margin-right: 22rpx;
  border-radius: 50%;
}
.movie-content-detail-discuss-item-title .discuss-name{
  font-size: 30rpx;
  color: #8a8a8a;
}
.movie-content-detail-discuss-item .discuss-content{
  padding: 24rpx;
}
.movie-content-detail-discuss-item .discuss-date{
  color: #bfbfbf;
  font-size: 26rpx;
  text-align: right;
}
.comment{
  position: relative;
  height: 120rpx;
}
.comment-block{
  position: fixed;
  display: flex;
  align-items: center;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  border-top: 1rpx solid #e6e6e6;
  background-color: rgb(248, 248, 248);
}
.comment-block-content{
  display: flex;
}
.comment-block input{
  width: 65%;
  height: 96rpx;
  margin-left: 24rpx;
}
.comment-block-content button{
  width: 198rpx;
  height: 88rpx;
  color: #ffffff;
  border-radius: 8rpx;
  background-color: #0089FF;
}
