.video-play{
  display: flex;
  justify-content: center;
}
.video-play-main{
  width: 100%
}
.movie-name{
  font-size: 42rpx;
  padding: 32rpx;
  font-weight:700;
}
.nav{
  display: flex;
  height: 96rpx;
  border-bottom: 1rpx solid #dbdbdb;
}
.nav-item{
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav-item image{
  width: 38rpx;
  height: 38rpx;
  margin-right: 16rpx;
}
.nav-item-text{
  display: flex;
  flex-direction: column;
  font-size: 34rpx;
  font-weight: 600;
  color: firebrick;
}
.bottom-border{
  position: absolute;
  bottom: 0;
  width: 64rpx;
  height: 4rpx;
  background-color: firebrick;
}
.movie-content{
  display: flex;
  flex-direction: column;
}
.movie-content-detail{
  padding: 24rpx 32rpx;
}
.movie-content-detail-synopsis{
  font-size: 32rpx;
}
.movie-content-detail-discuss{
  padding: 24rpx;
}
.movie-content-detail-discuss-item{
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #dbdbdb;
  padding-bottom: 24rpx;
}
.movie-content-detail-discuss-item-title{
  display: flex;
  align-items: center;
}
.movie-content-detail-discuss-item-title image{
  width: 64rpx;
  height: 64rpx;
  margin-right: 22rpx;
}
.movie-content-detail-discuss-item-title .discuss-name{
  font-size: 30rpx;
  color: #8a8a8a;
}
.movie-content-detail-discuss-item .discuss-content{
  padding: 24rpx;
}
.movie-content-detail-discuss-item .discuss-date{
  color: #bfbfbf;
  font-size: 26rpx;
  text-align: right;
}
