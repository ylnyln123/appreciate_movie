

.block-list{
  padding: 36rpx 32rpx;
}
.block-item{
  display: flex;
  align-items: center;
  padding-left: 48rpx;
  margin-bottom: 32rpx;
  height: 200rpx;
  border-radius: 32rpx;
  background-color: red;
}
.block-item-text{
  margin-left: 24rpx;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 600;
}
.block-item .title{
  width: 64rpx;
  height: 64rpx;
}
.block-item .arrows{
  position: absolute;
  right: 96rpx;
  animation: move 1.5s infinite cubic-bezier(0.55, 0.27, 0.07, 1.14);
  opacity: 0.4;
  width: 48rpx;
  height: 48rpx;
}
@keyframes move {
  0% {
    right: 96rpx;
  }
  70% {
    right: 72rpx
  }
  100% {
    right: 72rpx
  }
}