.culture-main{
  position: relative;
}

.culture-main .culture-main-bg{
  position: relative;
  width: 100%;
  height: 20vh;
  border-radius: 0 0 30% 30%;
}
.culture-main-content{
  position: relative;
  z-index: 1
}
.culture-main-bg view{
  position: absolute;
  bottom: 64rpx;
  color: #ffffff;
  font-weight: 700;
  font-size: 38rpx;
  width: 100%;
  text-align: center;
}
.culture-main-content-title{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 42rpx;
  font-weight: 700;
  padding: 24rpx;
}
.culture-main-title-img{
  width: 42rpx;
  height: 42rpx;
  margin-right: 12rpx;
}
.culture-main-content-detail{
  padding: 0 24rpx 48rpx;
}
.culture-main-content-detail text{
  line-height: 48rpx;
  font-size: 34rpx;
  color: rgb(83, 81, 81)
}
.screen-btn{
  position: fixed;
  bottom: 72rpx;
  right: 54rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 108rpx;
  height: 108rpx;
  background-color: #009FCC;
  border-radius: 50%;
  z-index: 2;
}
.screen-btn image{
  width: 48rpx;
  height: 48rpx;
}
.culture-main-content-detail-title{
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}
