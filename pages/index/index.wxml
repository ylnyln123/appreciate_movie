  <view class="main-content">
   <!--轮播图-->
   <view class="swiper-list">
     <swiper class="home-swiper" indicator-dots="true" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{true}}" wx:if="{{books.length}}">
    <block wx:for="{{books}}" wx:key="index">
      <swiper-item>
        <image src="{{item.plot}}" class="slide-image"  data-id="{{item.id}}" bind:tap="onInfoDetail" mode="aspectFill" />
      </swiper-item>
    </block>
  </swiper>
   </view>

  <!-- 列表 -->
  <view class="movie-title">电影鉴赏</view>
  <view class="movie-list">
    <view wx:for="{{movieList}}" wx:key="index" class="movie-list-item" data-id="{{item.id}}" bind:tap="onInfoDetail">
      <image src="{{item.src}}"></image>
      <view class="movie-item-name">{{item.name}}</view>
    </view>
  </view>
    
</view>
</view>

