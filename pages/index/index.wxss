.main-content{
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.swiper-list{
  display: flex;
  justify-content: center;
  margin-top: 32rpx;
}

.home-swiper {
  width: 100%;
  height: 360rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}
.movie-title{
  margin-top: 32rpx;
  text-align: center;
  font-size: 42rpx;
  font-weight: 700;
}
.movie-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 18rpx;
}
.movie-list-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 12rpx;
  margin-top: 24rpx;
}
.movie-list-item image{
  width: 200rpx;
  height: 300rpx;
}
.movie-list-item .movie-item-name{
  font-size: 28rpx;
  color: gray;
}